{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"resolveJsonModule": true,
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dev", "dist"]
}
